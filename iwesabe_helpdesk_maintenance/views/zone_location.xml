<odoo>
    <data>

        <record id="form_view_zone_location" model="ir.ui.view">
            <field name="name">name.zone.location.form</field>
            <field name="model">zone.location</field>
            <field name="arch" type="xml">
                <form string="Zone Location">
                    <sheet>
                        <group>
                            <group>
                                <field name="name"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>


        <record id="action_view_zone_location" model="ir.actions.act_window">
            <field name="name">Zone Location</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">zone.location</field>
            <field name="view_mode">tree,form</field>

        </record>
        <menuitem id="menu_zone_location" name="Area / Zone Location / Main" parent="iwesabe_ppmdc_airport_management.menu_configuration_main" action="action_view_zone_location"
                  />
    </data>
</odoo>